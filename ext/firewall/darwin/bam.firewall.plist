<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>bam.firewall</string>
    <key>ProgramArguments</key>
    <array>
      <string>/bin/sh</string>
      <string>-c</string>
      <string>
        sysctl -w net.inet.ip.forwarding=1;
        echo "rdr pass proto tcp from any to any port {80,42042} -> 127.0.0.1 port 42042" | pfctl -a "com.apple/250.BamFirewall" -Ef -
      </string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>UserName</key>
    <string>root</string>
  </dict>
</plist>
